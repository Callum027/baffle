/* TODO: Come up with examples for and/or statements for policies. */

{
  "bindings": {
    "http": {
      "type": "service",
      "protocols": [
        {
          "protocol": "tcp",
          "port": 80
        }
      ]
    },
    "https": {
      "type": "service",
      "protocols": [
        {
          "protocol": "tcp",
          "port": 443
        }
      ]
    },
    "www": {
      "type": "group",
      "member_type": "service",
      "members": ["http", "https"]
    },

    
    "h4": {
      "type": "entity",
      "ipv4": ["192.0.2.1/24"]
    },
    "h5": {
      "type": "entity",
      "name": "h5",
      "ipv4": ["192.0.2.2/24"],
      "service": ["www"]
    },
    "h6": {
      "type": "entity",
      "name": "h6",
      "ipv4": "192.0.2.3/24",
    },
    "hosts_subnet": {
      "type": "alias",
      "ipv4_subnet": "192.0.2.0/24"
    },

    "h4_no_h5_www": {
      "type": "policy",
      "action": "deny",
      "subject": ["h4"],
      "object": ["h5"],
      "app": ["www"],
    },
    "h5_www": {
      "type": "policy",
      "action": "allow",
      "subject": ["hosts_subnet"],
      "object": ["h5"],
      "app": ["www"],
    }
  }
}